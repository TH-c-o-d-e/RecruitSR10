<!DOCTYPE html>
<html lang="fr">
<head>
  <title>Administration du Site</title>
  <meta charset="utf-8" />
  <link rel="stylesheet" href="test.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-5">
    <header class="row text-center">
      <h1>Administration du Site</h1>
    </header>

    <nav class="nav nav-tabs justify-content-center">
      <a class="nav-link" href="gestion_utilisateurs">Gérer les utilisateurs</a>
      <a class="nav-link" href="gestion_demande_organisation">Gérer les organisations</a>
      <a class="nav-link" href="deconnexion">Se déconnecter</a>
    </nav>

    <section class="mt-4">
      <h2 class="text-center">Gestion des demandes d'organisation</h2>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Demandeur</th>
              <th>Date</th>
              <th>Siren</th>
              <th>Nom</th>
              <th>Type</th>
              <th>Siège social</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (demandes && demandes.length > 0) { %>
              <% demandes.forEach(function(demande) { %>
                <tr>
                  <td><%= demande.demandeur %></td>
                  <td><%= demande.date %></td>
                  <td><%= demande.siren %></td>
                  <td><%= demande.nom %></td>
                  <td><%= demande.type %></td>
                  <td><%= demande.siege_social %></td>
                  <td>
                    <form action="/gestion_demande_organisation/valider-organisation/<%= demande.demandeur %>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-success btn-sm">Valider</button>
                    </form>
                    <form action="/gestion_demande_organisation/refuser-organisation/<%= demande.demandeur %>" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger btn-sm">Refuser</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="7" class="text-center">Aucune demande trouvée.</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</body>
</html>
