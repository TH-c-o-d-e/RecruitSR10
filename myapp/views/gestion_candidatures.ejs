<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>Utilisateur</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="test.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <header class="row text-center"><h1>Recrutement</h1></header>

      <nav
        class="nav nav-pills navbar-expand-lg navbar-light bg-light mt-2 mb-2"
      >
        <a class="nav-item nav-link mx-2" href="accueil_utilisateur.html"
          >Accueil</a
        >
        <a class="nav-item nav-link active mx-2" href="gestion_candidatures"
          >Gestion des candidatures
        </a>
        <a class="nav-item nav-link mx-2" href="offres_emploi"
          >Afficher offres d'emploi
        </a>
        <a class="nav-item nav-link mx-2" href="formulaire_entreprise"
          >Nouvelle entreprise
        </a>
      </nav>

      <div class="row">
        <div class="col-sm-12">
          <button class="btn btn-primary">Modifier</button>
          <button class="btn btn-primary">Télécharger dossier</button>
          <table class="table">
            <thead>
              <tr>
                <th><input type="checkbox" disabled="true" /></th>
                <th>Organisation</th>
                <th>Date candidature</th>
                <th>Date limite</th>
              </tr>
            </thead>
            <tbody>
              <% candidatures.forEach((candidature) => { %>
              <tr>
                <td><input type="checkbox" /></td>
                <td><%= candidature.organisation %></td>
                <td><%= candidature.date_candidature %></td>
                <td><%= candidature.date_limite %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>

      <footer></footer>
    </div>
  </body>
</html>