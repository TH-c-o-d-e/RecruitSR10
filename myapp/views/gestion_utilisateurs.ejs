<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>Utilisateur</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="test.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <% if (msg) { %>
    <script>
      window.alert("<%= msg %>");
    </script>
    <% } %>
    <div class="container mt-5">
      <div class="row">
        <header class="text-center"><h1>Recrutement</h1></header>
      </div>

      <div class="row">
        <nav
          class="nav nav-pills navbar-expand-lg navbar-light bg-light mt-2 mb-2"
        >
          <a class="nav-item nav-link mx-2" href="./">Accueil</a>
          <a class="nav-item nav-link active mx-2" href="./gestion_utilisateurs"
            >Gestion des utilisateurs</a
          >
          <a class="nav-item nav-link mx-2" href="./gestion_organisations"
            >Gestion des organisations</a
          >
        </nav>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <form action="/users/gerer_utilisateur" method="POST">
            <button
              type="submit"
              value="suppression"
              name="choix"
              class="btn btn-danger"
            >
              Supprimer
            </button>
            <button
              type="submit"
              value="modification"
              name="choix"
              class="btn btn-primary"
            >
              Modifier
            </button>
            <button
              type="submit"
              value="droits_admin"
              name="choix"
              class="btn btn-primary"
            >
              Accorder droits d'administration
            </button>
            <table class="table">
              <thead>
                <tr>
                  <th><input type="radio" disabled="true" /></th>
                  <th>Nom</th>
                  <th>Prénom</th>
                  <th>Email</th>
                  <th>Rôle</th>
                </tr>
              </thead>
              <tbody>
                <% for (let i = 0; i < user.length; i++) { %>
                <tr>
                  <td>
                    <input
                      name="utilisateur"
                      value="<%= users[i].id %>"
                      type="radio"
                      required
                    />
                  </td>
                  <td><%= user[i].nom %></td>
                  <td><%= user[i].prenom %></td>
                  <td><%= user[i].email %></td>
                  <td><%= user[i].type %></td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </form>
          <ul class="pagination">
            <% for (let i = 0; i < user.length/10; i++) { %>
            <li class="page-item">
              <button class="page-link" value="p<%= i+1 %>"><%= i+1 %></button>
            </li>
            <% } %>
          </ul>
        </div>
      </div>
    </div>

    <script>
      const boutons = document.querySelectorAll("button.page-link");
      let page_courante = document.querySelectorAll("tbody tr");
      let utilisateurs = page_courante;

      function paginer(page) {
        const start = (page - 1) * 10;
        const end = start + 10;
        utilisateurs.forEach((utilisateur, index) => {
          utilisateur.hidden = index < start || index >= end;
        });
      }

      paginer(1); // Afficher la première page par défaut

      boutons.forEach((button, index) => {
        button.addEventListener("click", () => {
          paginer(index + 1);
        });
      });
    </script>

    <div class="row">
      <footer></footer>
    </div>
  </body>
</html>