<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <title>Candidatures pour l'offre</title>
    <link rel="stylesheet" href="test.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link href="../public/sans_bord.css" rel="stylesheet" />
    <style>
      /* Ajoute tes styles personnalisés ici si nécessaire */
    </style>
  </head>
  <body>
    <div class="container mt-5">
      <header class="row text-center">
        <h1>Recrutement</h1>
      </header>

      <nav
        class="nav nav-pills navbar-expand-lg navbar-light bg-light mt-2 mb-2"
      >
        <a class="nav-item nav-link mx-2" href="/recruteur">Accueil</a>
        <a
          class="nav-item nav-link active mx-2"
          href="/recruteur/gestion_offres"
          >Gestion des offres</a
        >
        <a class="nav-item nav-link mx-2" href="/recruteur/gestion_recruteurs"
          >Gestion des recruteurs</a
        >
      </nav>

      <div class="row">
        <div class="col-sm-12">
          <form action="/offers/telecharger_candidature" method="POST">
            <button
              type="submit"
              name="choix"
              value="telecharger"
              class="btn btn-primary"
            >
              Télécharger dossier
            </button>
            <table class="table">
              <thead>
                <tr>
                  <th><input type="radio" disabled="true" /></th>
                  <th>Nom</th>
                  <th>Prénom</th>
                  <th>Date candidature</th>
                </tr>
              </thead>
              <tbody>
                <% candidatures.forEach(candidature => { %>
                <tr>
                  <th><input name="dossier" type="radio" /></th>
                  <td><%= candidature.nom %></td>
                  <td><%= candidature.prenom %></td>
                  <td><%= candidature.date_candidature %></td>
                </tr>
                <% }); %>
                <!-- Ajouter d'autres lignes si nécessaire -->
              </tbody>
            </table>
          </form>

          <ul class="pagination">
            <% for (let i = 0; i < candidatures.length / 2; i++) { %>
            <li class="page-item">
              <button class="page-link" value="b<%= i+1 %>"><%= i+1 %></button>
            </li>
            <% } %>
          </ul>

          <a href="/recruteur/gestion_offres">Voir offres en cours</a>
        </div>
      </div>
    </div>

    <footer>
      <!-- Ajoute ton contenu de footer si nécessaire -->
    </footer>
  </body>
</html>
