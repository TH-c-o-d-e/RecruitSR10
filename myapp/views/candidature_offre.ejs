<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>Utilisateur</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="test.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <header class="row text-center"><h1>Recrutement</h1></header>

      <nav
        class="nav nav-pills navbar-expand-lg navbar-light bg-light mt-2 mb-2"
      >
        <a class="nav-item nav-link mx-2" href="./">Accueil</a>
        <a
          class="nav-item nav-link active mx-2"
          href="/recruteur/gestion_offres"
          >Gestion des offres</a
        >
        <a class="nav-item nav-link mx-2" href="/recruteur/gestion_recruteurs"
          >Gestion des recruteurs</a
        >
      </nav>

      <div class="row">
        <div class="col-sm-12">
          <button class="btn btn-primary">Télécharger dossier</button>
          <table class="table">
            <thead>
              <tr>
                <th><input type="radio" disabled /></th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Date candidature</th>
              </tr>
            </thead>
            <tbody>
              <% candidatures.forEach(function(candidature) { %>
              <tr>
                <th><input name="dossier" type="radio" /></th>
                <td><%= candidature.nom %></td>
                <td><%= candidature.prenom %></td>
                <td><%= candidature.date %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>

          <ul class="pagination">
            <li
              class="page-item <%= pagination.currentPage === 1 ? 'disabled' : '' %>"
            >
              <a
                class="page-link"
                href="?page=<%= pagination.previousPage %>"
                tabindex="-1"
                >Previous</a
              >
            </li>
            <% for(let i = 1; i <= pagination.totalPages; i++) { %>
            <li
              class="page-item <%= pagination.currentPage === i ? 'active' : '' %>"
            >
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>
            <li
              class="page-item <%= pagination.currentPage === pagination.totalPages ? 'disabled' : '' %>"
            >
              <a class="page-link" href="?page=<%= pagination.nextPage %>"
                >Next</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>

    <footer></footer>
  </body>
</html>
