<!DOCTYPE html>
<html lang="fr">
  <head>
    <title>Utilisateur</title>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="test.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <header class="row text-center"><h1>Recrutement</h1></header>

      <nav
        class="nav nav-pills navbar-expand-lg navbar-light bg-light mt-2 mb-2"
      >
        <a class="nav-item nav-link mx-2" href="accueil_utilisateur">Accueil</a>
        <a class="nav-item nav-link mx-2" href="gestion_candidatures"
          >Gestion des candidatures</a
        >
        <a class="nav-item nav-link active mx-2" href="offres_emploi"
          >Afficher offres d'emploi</a
        >
        <a class="nav-item nav-link mx-2" href="formulaire_entreprise"
          >Nouvelle entreprise</a
        >
      </nav>

      <div class="row">
        <div class="col-sm-12">
          <div class="col-sm-6">
            <form class="form-group input-group mb-2">
              <input
                label="Rechercher"
                type="search"
                placeholder="Entrer le terme à rechercher..."
                class="form-control mx-3"
              />
              <div class="input-group-append">
                <button class="btn btn-primary">Rechercher</button>
              </div>
            </form>
            <select class="form-select" aria-label="Trier par…">
              <option value="1">Date de publication</option>
              <option value="2">Distance</option>
              <option value="3">Salaire</option>
            </select>
          </div>

          <table class="table">
            <thead>
              <tr>
                <th>Organisation</th>
                <th>Date limite</th>
                <th>Fourchette</th>
                <th>Lieu de mission</th>
                <th>Statut de poste</th>
                <th>Candidater</th>
              </tr>
            </thead>
            <tbody>
              <% offres.forEach((offre) => { %>
              <tr>
                <td><%= offre.organisation %></td>
                <td><%= offre.date_limite %></td>
                <td><%= offre.fourchette %></td>
                <td><%= offre.lieu_mission %></td>
                <td><%= offre.statut_poste %></td>
                <td><a href="candidater/<%= offre.id %>">Candidater</a></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
          <ul class="pagination">
            <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
              <a
                class="page-link"
                href="?page=<%= currentPage - 1 %>"
                tabindex="-1"
                >Previous</a
              >
            </li>
            <% for (let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
            <% } %>
            <li
              class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>"
            >
              <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
            </li>
          </ul>
        </div>
      </div>
    </div>

    <footer></footer>
  </body>
</html>
